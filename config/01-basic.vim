filetype indent plugin on
syntax on
set autoindent
set autochdir
set autoread

set number
set relativenumber
set cursorline
set cursorcolumn

set laststatus=2
set ruler

set listchars=tab:»■,trail:■
set list

set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase

set scrolloff=5
set sidescrolloff=15

set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4

set updatetime=500
let mapleader=";"
