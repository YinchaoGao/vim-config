filetype indent plugin on
set autoindent
syntax on
set autochdir
set autoread
set updatetime=1000

set nu
set relativenumber
set cul
set cuc

set laststatus=2
set ruler

set listchars=tab:»■,trail:■
set list

set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase

set wrap
set linebreak
set wrapmargin=2
set scrolloff=5
set sidescrolloff=15

set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4
let mapleader=";"
